                <p class="precio">Precio: @ViewBag.Presidencial</p>
                <p class="disponibilidad">Disponible: 20 unidades</p>
                <button>Reservar</button>
            </div>
            <div class="container">
                <h1>Servicios</h1>
                @foreach (var log in ViewBag.LServicios)
                {
                    foreach (var servicio in ViewBag.LPresidencial)
                    {
                        var ID = log.ID_Servicios;

                        if (ID == servicio.ID_Servicio)
                        {
                            <p>@log.Servicio</p>
                        }
                    }

                }

            </div>
        </div>
    }
    @if (ViewBag.LVIP is not null)
    {
        <div class="producto">
            <img src="https://fantasyrooms.com/blog/wp-content/uploads/2022/08/62-2_10_.jpg" alt="Producto">
            <div class="descripcion">
                <h2>Habitación VIP</h2>
                <p class="precio">Precio: @ViewBag.VIP</p>
                <p class="disponibilidad">Disponible: 20 unidades</p>
                <button>Reservar</button>
            </div>
            <div class="container">
                <h1>Servicios</h1>
                @foreach (var log in ViewBag.LServicios)
                {
                    foreach (var servicio in ViewBag.LVIP)
                    {
                        var ID = log.ID_Servicios;

                        if (ID == servicio.ID_Servicio)
                        {
                            <p>@log.Servicio</p>
                        }
                    }

                }

            </div>
        </div>
    }

</body>