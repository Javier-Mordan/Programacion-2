
@model List<Datos.DBConexion._HabitacionXMotel>

<style>
    .Contenedor {
        max-width: 100%; /* Ancho máximo del formulario */
        margin: 0 auto; /* Centra el formulario horizontalmente */
        padding: 20px; /* Espaciado interno del contenedor */
        border: 1px solid #ccc; /* Borde del contenedor */
        border-radius: 5px; /* Bordes redondeados */
        background-color: #f9f9f9; /* Fondo del contenedor */
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Sombra suave */
    }

    /* Estilo para los campos de entrada */
    .form-group {
        margin-bottom: 15px; /* Espaciado entre campos */
    }

    label {
        display: block; /* Muestra la etiqueta en una nueva línea */
        margin-bottom: 5px; /* Espaciado inferior de la etiqueta */
        font-weight: bold; /* Texto en negrita */
    }

    input {
        width: 100%; /* Ancho completo del campo de entrada */
        padding: 10px; /* Espaciado interno del campo de entrada */
        border: 1px solid #ccc; /* Borde del campo de entrada */
        border-radius: 3px; /* Bordes redondeados */
    }

    /* Estilo para el botón de envío */
    button {
        background-color: #007bff; /* Color de fondo del botón */
        color: #fff; /* Color del texto del botón */
        padding: 10px 20px; /* Espaciado interno del botón */
        border: none; /* Sin borde */
        border-radius: 3px; /* Bordes redondeados */
        cursor: pointer; /* Cambia el cursor al pasar sobre el botón */
    }

    button {
        background-color: #0056b3; /* Cambio de color de fondo al pasar el ratón */
    }

    /* Estilo para el contenedor del checkbox */
    .form-check-input {
        display: inline-block;
        vertical-align: middle;
        position: relative;
        cursor: pointer;
    }

        /* Estilo oculto para el input real del checkbox */
        .form-check-input input[type="checkbox"] {
            position: absolute;
            opacity: 0;
            cursor: pointer;
        }

    .Lugar {
        margin: 0 auto;
    }

    .container {
        max-width: 100%;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

    h1 {
        text-align: center;
        color: #333;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        padding: 10px;
        text-align: left;
    }

    th {
        background-color: #333;
        color: #fff;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    input[type="text"], input[type="number"] {
        width: 100%;
        padding: 8px;
        margin-bottom: 10px;
    }

    button {
        background-color: #333;
        color: #fff;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
    }

        button:hover {
            background-color: #555;
        }
</style>

<h2>Registrar</h2>

<body>
    <form action="/Registrar/GuardarDatos" method="post" id=" form_Registro" class="Formulario">
        <div class="Contenedor" style="width: 100%;">
            <lebel>Nombre del motel</lebel>
            <input class="form-control" name="nombre_text" type="text" formmethod="post" required />
            <lebel>Ubicación</lebel>
            <input class="form-control" name="Ubicacion_text" type="text" formmethod="post" required />
            <label>Sector</label>
            <p class="clasificacion" required>
                <input id="radio1" type="radio" class="Lugar" name="idsector" value="1">"Paraiso"
                <input id="radio2" type="radio" class="Lugar" name="idsector" value="2">"Ensache Naco"
                <input id="radio3" type="radio" class="Lugar" name="idsector" value="3">"Ensanche La fe"
            </p>
            <lebel>Formas de pago</lebel>
            <br />
            <div class="cont">
                <input class="form-check-input" type="checkbox" name="Pago1" value="1"> Efectivo
                <input class="form-check-input" type="checkbox" name="Pago2" value="2"> Tarjeta
            </div>


            <br />
            <input for="form_Registro" type="submit" onclick="alertar()" value="Agregar" class="btn" />
        </div>


    </form>
    <p style="color:brown">@ViewBag.Verificar</p>
    <br />
    <p style="color:crimson ">@ViewBag.validar</p>
    <br />
    <form action="/Registrar/Guardar_Habitacion" method="post">
        <div class="container">
            <h1>Tipos de Habitaciones y Precios</h1>
            <table>
                <tr>                    
                    <th>Tipo de Habitación</th>
                    <th>Precio $RD</th>
                </tr>
                <tr>                    
                    <td><input type="number" name="Tipo" min="1" max="3" placeholder="Para regular digite 1"></td>
                    <td><input type="number" name="Precio" placeholder="Precio"></td>
                </tr>
                <tr>
                    <td><input type="text" name="Tipo2" min="1" max="3" placeholder="Para presidencial Digite 2"></td>
                    <td><input type="number" name="Precio2" placeholder="Precio"></td>
                </tr>
                <tr>
                    <td><input type="text" name="Tipo3" min="1" max="3" placeholder="Para VIP digite 3"></td>
                    <td><input type="number" name="Precio3" placeholder="Precio"></td>
                </tr>
                <!-- Agrega más filas según sea necesario -->
            </table>
            <button onclick="">Agregar Habitación</button>
        </div>
    </form>
    <br />
    <form action="/Registrar/Guardar_Servicios" method="post">
        <div class="container">
            <h1>Servicios de cada habitacion</h1>
            <table>
                <tr>
                    <th>Tipo de Habitacion</th>
                    <th>ID de habitacion</th>
                    <th>Aire</th>
                    <th>Televisor</th>
                    <th>Jacuzzi</th>
                    <th>Mueble Kamasutra</th>
                    <th>WiFi</th>
                </tr>
                <tr>
                    <td>
                        <div>
                            <p name="ID" id="ID" value="@ViewBag.ID" p>
                            <span>Basica</span>
                        </div>
                    </td>
                    <td><input type="number" name="ID_Habitacion" value="1" readonly /></td>
                    <td><input type="checkbox" name="Aire" value="1"></td>
                    <td><input type="checkbox" name="Televisor" value="2"></td>
                    <td><input type="checkbox" name="Jacuzzi" value="3"></td>
                    <td><input type="checkbox" name="Kamasutra" value="4"></td>
                    <td><input type="checkbox" name="WiFi" value="5"></td>
                </tr>
                <tr>
                    <td>
                        <div>
                            <p name="ID" id="ID" value="@ViewBag.ID" p>
                                <span>Presidencial</span>
                        </div>
                    </td>
                    <td><input type="number" name="ID_Habitacion2" value="2" readonly /></td>
                    <td><input type="checkbox" name="Aire2" value="1"></td>
                    <td><input type="checkbox" name="Televisor2" value="2"></td>
                    <td><input type="checkbox" name="Jacuzzi2" value="3"></td>
                    <td><input type="checkbox" name="Kamasutra2" value="4"></td>
                    <td><input type="checkbox" name="WiFi2" value="5"></td>
                </tr>
                <tr>
                    <td>
                        <div>
                            <p name="ID" id="ID" value="@ViewBag.ID" p>
                                <span>VIP</span>
                        </div>
                    </td>
                    <td><input type="number" name="ID_Habitacion3" value="3" readonly /></td>
                    <td><input type="checkbox" name="Aire3" value="1"></td>
                    <td><input type="checkbox" name="Televisor3" value="2"></td>
                    <td><input type="checkbox" name="Jacuzzi3" value="3"></td>
                    <td><input type="checkbox" name="Kamasutra3" value="4"></td>
                    <td><input type="checkbox" name="WiFi3" value="5"></td>
                </tr>
                <!-- Agrega más filas según sea necesario -->
            </table>
            <button onclick="">Agregar Habitación</button>
        </div>
    </form>
    <script src="http://ajax.microsoft.com/ajax/jquery/jquery-1.4.2.js" type="text/javascript"></script>
    <script>



        $(document).ready(function () {
        $.ajax({
            type: "GET",
            url: "@Url.Action("ObtenerUltimoID", "Registrar")",
            dataType: "json",
            success: function (data) {
                var ultimoID = data.ultimoID;
                // Hacer algo con el último ID, por ejemplo, mostrarlo en la consola
                $("#ID").val(ultimoID);
            },
            error: function (error) {
                console.log("Error al obtener el último ID.");
            }
        });
    });
    </script>





</body>


